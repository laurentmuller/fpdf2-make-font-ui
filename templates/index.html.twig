{% extends 'base.html.twig' %}
{% block title %}{{ 'query.title'|trans }}{%  endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="d-flex align-items-center border-bottom mt-2">
                    <h1 class="me-auto">{{ block('title') }}</h1>
                    {% include('locale_switcher.html.twig') %}
                    {% include('theme_switcher.html.twig') %}
                </div>
                {%  if error %}
                    <div class="alert alert-danger" role="alert"><i class="fa-solid fa-circle-exclamation me-1"></i>{{ error }}</div>
                {% elseif content %}
                    <div class="alert alert-primary" role="alert"><i class="fa-solid fa-circle-info me-1"></i>{{ content|nl2br }}</div>
                {% endif %}
                {{ form_start(form, {attr: {'id': form.vars.name}}) }}
                {{ form_row(form.fontFile) }}
                {{ form_row(form.afmFile) }}
                {{ form_row(form.encoding) }}
                {{ form_row(form.embed) }}
                {{ form_row(form.subset) }}
                <hr>
                <div class="d-flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-form btn-primary">
                        <i class="fa-solid fa-pen-to-square me-2"></i>{{ 'query.generate'|trans -}}
                    </button>
                    <button type="button" class="btn btn-form btn-secondary btn-erase">
                        <i class="fa-solid fa-eraser me-2"></i>{{ 'query.reset'|trans -}}
                    </button>
                    <a href="https://github.com/laurentmuller/fpdf2-make-font" target="_blank" class="btn btn-form btn-dark ms-sm-auto">
                        <i class="fa-brands fa-github me-2"></i>{{ 'query.gitHub'|trans -}}
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
